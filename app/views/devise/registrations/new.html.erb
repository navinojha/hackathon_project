<h2 class="head1">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field field_empid">
    <%= f.label :empid, "Employee Id" %><br />
    <%= f.text_field :empid, autofocus: true %>
  </div>

  <div class="field field_email">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field field_password">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field field_confirm_password">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions action2">
    <%= f.submit "Sign up",class: "btn btn-outline-primary btn-lg pl-5 pr-5" %>
  </div>
<% end %>


