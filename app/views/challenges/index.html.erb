<%if current_emp %>
  <h1>Add Challenge </h1>
  <%= link_to "logout", destroy_emp_session_path, method: :delete %>
  <%= form_with model: Challenge do |form|%>
    <%=form.text_field :title, placeholder: "Title"%>
    <%=form.text_field :description, placeholder: "desciption"%>
    <%=form.text_field :tag_name, placeholder: "Tag"%>
    <%=form.hidden_field :emp_id, value:current_emp.id%>
    <%=form.submit "Add Challenges"%>
  <% end %>
<% else %>
<%= link_to "login", new_emp_session_path, class: "text-center"%>
<% end %>
<h1>Challenges</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Emp</th>
      <th>Tags</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.title %></td>
        <td><%= challenge.description %></td>
        <td><%= challenge.emp_id %></td>
        <td><% challenge.tags.each do |tag| %>
                <%= tag.name %>
            <% end %>
        </td>
        <td><%= link_to 'Show', challenge %></td>
        <% if current_emp %>
          <%if current_emp.id == challenge.emp_id%>
            <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
            <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>  
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "login", new_emp_session_path, class: "text-center"%>

